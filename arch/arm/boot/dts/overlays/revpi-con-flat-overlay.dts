/*
 * Device tree overlay for Revolution Pi by KUNBUS
 *
 * RevPi Connect Flat
 */

/dts-v1/;
/plugin/;
/{
	compatible = "brcm,bcm2837";

	fragment@0 {
		target = <&mmc>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			pinctrl-names = "default";
			pinctrl-0 = <&emmc_gpio34>;
			status = "okay";
			bus-width = <4>;
			non-removable;

			brcmf: wifi@1 {
				reg = <1>;
				compatible = "brcm,bcm4329-fmac";
				status = "okay";
			};
		};
	};

	fragment@1 {
		target = <&uart1>;
		__overlay__ {
			pinctrl-names = "default";
			pinctrl-0 = <&uart1_gpio40 &uart1_ctsrts_gpio42>;
			status = "okay";

			bluetooth {
				compatible = "brcm,bcm43438-bt";
				max-speed = <2000000>;
			};
		};
	};
};
